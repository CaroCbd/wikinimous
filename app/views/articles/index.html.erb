<h1 class="mb-5 border-bottom border-success border-2"> Liste des articles </h1>

<div class="row mb-5">
  <div class="col-12">
    <%= link_to "Write a new article", new_article_path, class: "btn btn-primary rounded mb-5" %>
  </div>
  <% @articles.reverse.each do |article|%>
  <div class="col-10">
      <article class="mb-5 border-start border-bottom border-secondary border-4 ps-4 pb-4">
        <h2> <%= article.title %> </h2>
        <p> <%= article.content %> </p>
        <%= link_to "Read article", article_path(article), class: "link-info" %>
      </article>
  </div>
  <div class="col-2 col">
    <div class="col-1">
      <%= link_to "Edit", edit_article_path(article), class: "btn btn-info rounded m-1" %>
    </div>
    <div class="col-1">
      <%= link_to "Delete", article_path(article), class: "btn btn-danger rounded m-1", data: {turbo_method: :delete, turbo_confirm: "You're about to delete #{article.title}. Please confirm your action"} %>
    </div>
  </div>
  <% end %>

</div>
